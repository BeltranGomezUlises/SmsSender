<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp">


    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        cardCornerRadius="8dp">
        <!--android:cardCornerRadius="4dp"-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="86dp">

            <RelativeLayout
                android:id="@+id/leftSide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/relativeLayout"
                android:padding="8dp">

                <TextView
                    android:id="@+id/lbImei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Imei:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lbImeiNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbImei"
                    android:layout_marginRight="12dp"
                    android:text="789456132456798456"
                    android:textSize="16sp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/chkActivo"
                    android:text="activo"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/relativeLayout"
                android:padding="8dp"
                android:background="@color/cardview_light_background">

                <TextView
                    android:gravity="center"
                    android:id="@+id/lbEnviados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enviados: "
                    android:textSize="14sp" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/lbContadorEnviados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbEnviados"
                    android:text="0"
                    android:textSize="18sp" />

            </RelativeLayout>



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>